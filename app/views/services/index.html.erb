<div class="social-icons">
  <%= link_to "<i class='icon-facebook'></i>".html_safe, "http://www.facebook.com/pages/Audio-Cancun/140245099412517", class: 'facebook', target: "_blank" %>
  <%= link_to "<i class='icon-youtube'></i>".html_safe, "http://www.youtube.com/user/AUDIOCANCUN", class: 'youtube', target: "_blank" %>
  <%= link_to "<i class='icon-mail'></i>".html_safe, "/contacto", class: 'mail' %>
</div>

<div class="index-background"></div>

<div id="carousel-index" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#carousel-index" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-index" data-slide-to="1"></li>
    <li data-target="#carousel-index" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item index-back active">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <%= image_tag 'microfono.png', class: 'img-responsive', id: 'img1' %>
          </div>
          <div class="col-sm-6">
            <h2 id="head1"><%= t 'body.slide1.title' %></h2>
            <p><%= t 'body.slide1.subtitle' %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="item index-back">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <h2 id="head2"><%= t 'body.slide2.title' %></h2>
            <p><%= t 'body.slide2.subtitle' %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="item index-back">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <center><h2><%= t 'body.slide3.title' %></h2></center>
            <center><p><%= t 'body.slide3.subtitle' %></p></center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% flash.each do |name, msg| %>
  <div class="message alert-dismiss">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <center><strong><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></strong></center>
  </div>
<% end %>


