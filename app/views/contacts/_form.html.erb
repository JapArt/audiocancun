<%= form_for(@contact, class: 'form') do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label (t 'contact.name') %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label (t 'contact.tel') %>
      <%= f.text_field :tel, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label (t 'contact.email') %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label (t 'contact.event') %>
      <%= f.text_field :event, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label (t 'contact.date') %>
      <%= f.date_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label (t 'contact.schedule') %>
      <%= f.time_select :schedule, class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-6">
  <div class="form-group">
    <%= f.label (t 'contact.place') %>
    <%= f.text_area :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label (t 'contact.person') %>
    <%= f.number_field :person, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label (t 'contact.req') %>
    <%= f.text_area :requeriments, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label (t 'contact.comments') %>
    <%= f.text_area :comments, class: 'form-control' %>
  </div>  
</div>  
</div>


  <div class="actions">
    <%= f.submit (t 'contact.submit'), class: 'btn btn-lg btn-default' %>
  </div>
<% end %>
